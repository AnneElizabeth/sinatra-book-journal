<h2>Edit a Journal Entry</h2>

<form class="" action="/journal_entries/<%= @journal_entry.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="book_title"><h4>Book Title:</h4> </label>
  <textarea name="book_title" style="width:auto; height:auto; padding:5px;"><%= @journal_entry.book_title %></textarea>
  <label for="content"><h4>Entry:</h4> </label>
  <textarea name="content" style="width:auto; height:auto; padding:5px;"><%= @journal_entry.content %></textarea><br />
  <input class="btn" type="submit" value="Edit Entry">
</form>